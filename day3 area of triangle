#include <stdio.h>

int main() {
    double base, height;
    
    printf("Enter the base length of the triangle: ");
    scanf("%lf", &base);
    
    printf("Enter the height of the triangle: ");
    scanf("%lf", &height);

    // Calculate the area
    double area = 0.5 * base * height;
    
    printf("The area of the triangle is: %.2lf\n", area);
    
    return 0;
}
